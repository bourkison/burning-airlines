    <%= form.date_select :date, id: :flight_date %>
  </div>

  <div class="field">
    <%= form.label :to %>
    <%= form.text_field :to, id: :flight_to %>
  </div>

  <div class="field">
    <%= form.label :from %>
    <%= form.text_field :from, id: :flight_from %>
  </div>

  <div class="field">
    <%= form.label :airplane_id %>
    <%= form.number_field :airplane_id, id: :flight_airplane_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
